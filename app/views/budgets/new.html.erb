<div class="new">
  <h1 class="heading-name">結果作成</h1>

  <div class="contents">
  <%= form_with(model: @budget, local: true) do |f| %>

    <div class="content">
      <%= f.label :start_time, "日付"%>
      <div class="left-content">
      <%= f.date_select :start_time, default: {year: @day_params[:year],month: @day_params[:mon],day: @day_params[:mday]} %>
      </div>
    </div>

    <div class="content">
      <%= f.label :store_id, "ホール名" %>
      <div class="left-content">
      <%= f.collection_select :store_id, Hall.all, :id, :store, {prompt: "選択してください"} %>
      </div>
    </div>

    <div class="content">
      <%= f.label :price, "投資" %>
      <div class="left-content">
      <%= f.text_field :price, id: "price1" %>
      <%= f.collection_select(:yen_id, Yen.all, :id, :name, {}, {class:"yen-select"}) %>
      </div>
    </div>

    <div class="content">
      <%= f.label :recobery, "回収" %>
      <div class="left-content">
      <%= f.text_field :recovery, id: "price2" %>
      <%= f.collection_select(:yen_id, Yen.all, :id, :name, {}, {class:"yen-select"}) %>
      </div>
    </div>

    <div class="content">
      <span>本日の収支</span>
        <div class="price-input">
        <span style="color:white" id="total" ></span>円
        </div>
    </div>

    <p class="content">今日のハイライト画像</p>
    <div class="content">
      <%= f.file_field :image %>
    </div>

    <div class="content">
      <%= f.label :memo, "メモ" %>
      <div class="left-content">
      <%= f.text_area :memo, class: "memo" %>
      </div>
    </div>

    <div class="content">
    <div class="btn-content">
      <%= f.submit "登録する", class:"btn" %>
    </div>
    </div>

  <% end %>
  </div>
</div>