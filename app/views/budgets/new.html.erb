<%= form_with(model: @budget, local: true) do |form| %>

  <div class="time">
    <%= form.label :start_time %>
    <%= form.date_select :start_time %>
  </div>

    <div class="price">
    <%= form.label :price %>
    <%= form.text_field :price, id: "price1" %>
    <%= form.collection_select(:yen_id, Yen.all, :id, :name, {}, {class:"yen-select"}) %>
  </div>

  <div class="recovery">
    <%= form.label :recobery %>
    <%= form.text_field :recovery, id: "price2" %>
    <%= form.collection_select(:yen_id, Yen.all, :id, :name, {}, {class:"yen-select"}) %>
  </div>

  <div class="total">
    <span>本日の収支</span>
    <span>
      <span id="total" ></span>円
    </span>
  </div>

  <p>今日のハイライト画像</p>
  <%= form.file_field :image %>

  <div class="memo">
    <%= form.label :memo %>
    <%= form.text_area :memo %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>