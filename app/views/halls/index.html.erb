<%= render "budgets/header" %>

<div class="row">

  <div class="col-xs-3">
    <%= form_with model: @hall, local: true do |f| %>

    <%= render 'layouts/error_messages', model: f.object %>

      <%= f.label :store, 'ホール名' %>
      <br>
      <%= f.text_field :store, class:'form-control' %>
      <br>

      <%= f.submit '追加', class: 'btn btn-primary btn-block' %>
    <%end%>
  </div>

  <div class="col-xs-9">
    <table class="table">
      <thead>
        <tr>
          <th>ホール名</th>
        </tr>
      </thead>

      <tbody>
        <% @halls.each do |hall| %>
          <tr>
            <td><%= hall.store %></td>
            <td><%= link_to '編集', edit_hall_path(hall), class: 'btn-sm btn-primary' %></td>
            <td><%= link_to '削除', hall_path(hall), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn-sm btn-danger' %></td>
            <td><%= link_to '店舗情報', "https://www.google.com/search?q=#{hall.store}", target: "_blank" %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>

<%= render "budgets/footer" %>